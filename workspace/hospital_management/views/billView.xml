<!-- Views for bill -->
<odoo>
    <record id="view_patient_bill_form" model="ir.ui.view">
        <field name="name">patient.bill.form</field>
        <field name="model">patient.bill</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button name="_compute_amount" type="object" class="oe_highlight" string="TotalAmount"/> -->
                </header>
                <sheet>
                    <group>
                        <field name="name_id"/>
                        <field name="billDate"/>
                        <field name="charge"/>
                        <field name="bill"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_bill_tree" model="ir.ui.view">
        <field name="name">patient.bill.tree</field>
        <field name="model">patient.bill</field>
        <field name="arch" type="xml">
           <tree>
              <field name="name_id"/>
              <!-- <field name="speciality"></field>  -->
           </tree>
        </field>
    </record>
</odoo>    